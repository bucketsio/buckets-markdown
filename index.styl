#markdownLogo
  position absolute
  top 15px
  right 15px
  width 30px
  height 20px
  height auto
  opacity .3
  cursor pointer
  z-index 10

  &:hover
    opacity .5

.markdown-preview
  position absolute
  top 2px
  right 2px
  left 2px
  bottom 2px
  display none
  padding 10px
  background-color rgba(#fefefe,.96)
  overflow auto
  color #888
  font-size 16px
  cursor pointer

.userFields textarea.markdown
  font-family Menlo,'Courier New',monospace
  font-size 14px
  color #222
  padding-right 35px
  padding-top 13px

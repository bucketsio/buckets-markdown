#markdownLogo
  position absolute
  top 4px
  right 15px
  width 26px
  height auto
  opacity .3
  cursor pointer
  z-index 10

  &:hover
    opacity .5

.markdown-container
  box-sizing content-box
  overflow hidden
  position relative
  margin -2px -15px 0
  background-color #fafafa
  padding 15px 15px
  width 100%

.markdown-preview
  position absolute
  top 0
  right 0
  left 0
  bottom 0
  display none
  padding 15px 35px 15px 15px
  background-color rgba(#fefefe,.98)
  overflow auto
  color #888
  font-size 16px
  cursor pointer

.userFields textarea.markdown
  font-family Menlo,'Courier New',monospace
  font-size 14px
  color #222
  padding 0
  padding-right 35px
  border 0
  background-color transparent

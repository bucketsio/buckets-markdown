<div class="form-group">
  <label for="input-{{slug}}">{{name}}</label>
  <div style="position:relative; overflow: hidden;padding: 0;">
    <svg class="show-tooltip" title="Toggle Markdown preview" data-placement="left" id="markdownLogo" xmlns="http://www.w3.org/2000/svg" width="33" height="20" viewBox="0 0 208 128"><mask id="a"><rect width="100%" height="100%" fill="#fff"/><path d="M30 98v-68h20l20 25 20-25h20v68h-20v-39l-20 25-20-25v39zM155" /><path id="markdownLogoArrow" d="M155 98l-30-33h20v-35h20v35h20z" /></mask><rect width="100%" height="100%" ry="15" mask="url(#a)"/></svg>

    {{textarea slug value instructions=instructions required=required className="markdown form-control" size=settings.size}}

    <div class="markdown-preview"></div>
  </div>
</div>

<style>
  #markdownLogo {
    position: absolute;
    top: 10px;
    right: 10px;
    width: 30px;
    height: 20px;
    height: auto;
    opacity: .3;
    cursor: pointer;
    z-index: 10;
  }
  .markdown-preview {
    position: absolute;
    top: 2px;
    right: 2px;
    left: 2px;
    bottom: 2px;
    display: none;
    padding: 10px;
    background-color: rgba(254,254,254,.96);
    overflow: auto;
    color: #888;
  }
  textarea.markdown {
    font-family: Menlo,'Courier New',monospace;
  }
  #markdownLogo:hover {
    opacity: .5;
  }
</style>
